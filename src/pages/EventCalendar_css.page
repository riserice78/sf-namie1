<apex:page contentType="text/css" standardStylesheets="false">
    #mainContainer{
        width: 96%;
        margin: 0 auto;
    }
    .calendarContainer{
        border-collapse: collapse;
        width: 65%;
        float: left;
        margin-top:50px;
    }
    .eventContainer{
        float: right; 
        width: 33%;
        margin: 0 auto;
        height: 680px;
        overflow-y: scroll;
    }
    .calendarContainer th span{
        display: block;
        padding: 5px 0; 
        width: 94%;
        text-align: center;
        border-radius: 10px;
        background-color: #888;
        color: white;
        margin: 5px 3%;
    }
    .calendarContainer td{
        padding: 5px 1%;
        border-left: 1px #DDD dashed;
        border-right: 1px #DDD dashed;
        border-bottom: 1px solid #DDD;
        width: 10%;
        vertical-align: top;
    }
    /** SUN **/
    .calendarContainer tr th:first-child span{
        background-color: #cf0404;
    }
    /** SAT **/
    .calendarContainer tr th:last-child span{
        background-color: #3f4c6b;
    }
    td .dayEventList{
        height: 70px;
        overflow: scroll;
        font-size: 0.7em;
    }
    td .eventItem{
        display: block;
    }
    td.inactive{
        background: #999;
    }
    
    
    .eventBlock {
        border-top: 4px solid #779e00;
    }
    .componentContainer .contents{
        float: none;
        width: 100%;
    }
    .componentContainer .actions{
        float: none;
        width: 98%;
    }
    .componentContainer .contents img{
        float: none;
        margin: 0 3%;
        width: 94%;
    }
    .componentContainer .contents .detailBlock{
        width: 98%;
        margin: 0 1%;
        float: none;
    }
    .componentContainer .detailBlock .detailLine label{
        width: 96%;
        display: block;
    }
    .componentContainer .detailBlock .detailLine .value{
        background: #EEFDC4;
        width: 96%;
        display: block;
    }
    .joinEvent{
        background: #cbf93e;
        box-shadow: 0 2px #779e00;
        color: #333;
    }
    .viewEvent{
        background: #94b62d;
        box-shadow: 0 2px #779e00;
        color: #eee;
    }
    .barCol{
        background: #eee;
        width: 100%;
        display: block;
    }
    .barValue{
        display: block;
        min-height: 25px;
        background: #fceabb; /* Old browsers */
        background: -moz-linear-gradient(top,  #fceabb 0%, #fccd4d 50%, #f8b500 51%, #fbdf93 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, left bottom, color-stop(0%,#fceabb), color-stop(50%,#fccd4d), color-stop(51%,#f8b500), color-stop(100%,#fbdf93)); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(top,  #fceabb 0%,#fccd4d 50%,#f8b500 51%,#fbdf93 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(top,  #fceabb 0%,#fccd4d 50%,#f8b500 51%,#fbdf93 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(top,  #fceabb 0%,#fccd4d 50%,#f8b500 51%,#fbdf93 100%); /* IE10+ */
        background: linear-gradient(to bottom,  #fceabb 0%,#fccd4d 50%,#f8b500 51%,#fbdf93 100%); /* W3C */
        filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#fceabb', endColorstr='#fbdf93',GradientType=0 ); /* IE6-9 */
        z-index: 2;
        position: relative;
        width: 0;
    }
    .oneRowDetail{
        width: 98%;
        padding-bottom: 5px;
    }
    .oneRowDetail .percentValue{
        font-weight: bold;
        font-size: 1.2em;
        margin-left: 5%;
    }
    .componentContainer .oneRowDetail label{
        color: #4A6204;
        background: transparent;
        font-style: italic;
    }
    .componentContainer .oneRowDetail .value{
        float: left;
        background: transparent;
        display: block;
        margin-left: 3%;
        width: 92% !important;
    }
</apex:page>